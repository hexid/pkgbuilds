pkgname=kernel-module-backup
pkgver=0.2.0
pkgrel=1
pkgdesc='Kernel Module Backup Hooks'
arch=('any')
url='https://github.com/hexid/pkgbuilds'
license=('MIT')
depends=('bash' 'coreutils')
source=('backup-modules.hook'
        'link-modules.hook')
md5sums=('0826fa4e5751956795c84ef9aa62c4a0'
         '5bad47adabb4ca93cdf4c21d4bb7f043')

package() {
	install -D -m 644 backup-modules.hook "$pkgdir/usr/share/libalpm/hooks/60-kernel-modules-backup.hook"
	install -D -m 644 link-modules.hook "$pkgdir/usr/share/libalpm/hooks/60-kernel-modules-link.hook"
}
